datadir="/var/lib/proxysql"

admin_variables = {
  admin_credentials="admin:admin_pass"
  mysql_ifaces="0.0.0.0:6032"
  refresh_interval=2000
}

mysql_variables = {
  threads=4
  max_connections=2048
  default_query_delay=0
  default_query_timeout=36000000
  interfaces="0.0.0.0:6033"
  default_schema="information_schema"
  server_version="8.0.30"
  monitor_username="proxysql_monitor"
  monitor_password="monitor_pass"
  monitor_history=600000
  monitor_connect_interval=60000
  monitor_ping_interval=10000
  monitor_read_only_interval=1500
  monitor_replication_lag_interval=10000
  ping_interval_server_msec=120000
  ping_timeout_server=500
  commands_stats=true
  sessions_sort=true
}

# Hostgroup 0 = Writers (ambos masters)
# Hostgroup 1 = Readers (masters + slave VM)
mysql_servers = (
  { address="mysql-master1", port=3306, hostgroup=0, max_connections=200, weight=1 },
  { address="mysql-master1", port=3306, hostgroup=1, max_connections=200, weight=1 },
  { address="100.87.129.54", port=3306, hostgroup=0, max_connections=200, weight=1 },
  { address="100.87.129.54", port=3306, hostgroup=1, max_connections=200, weight=1 },
  { address="100.118.138.49", port=3306, hostgroup=1, max_connections=200, weight=2, max_replication_lag=10 }
)

mysql_users = (
  {
    username="app_user"
    password="app_password"
    default_hostgroup=0
    active=1
    max_connections=1000
    transaction_persistent=1
  }
)

mysql_query_rules = (
  {
    rule_id=1
    active=1
    match_digest="^SELECT.*FOR UPDATE"
    destination_hostgroup=0
    apply=1
  },
  {
    rule_id=2
    active=1
    match_digest="^(INSERT|UPDATE|DELETE|REPLACE|CREATE|ALTER|DROP|TRUNCATE)"
    destination_hostgroup=0
    apply=1
  },
  {
    rule_id=3
    active=1
    match_digest="^SELECT"
    destination_hostgroup=1
    apply=1
  }
)

mysql_replication_hostgroups = (
  {
    writer_hostgroup=0
    reader_hostgroup=1
    comment="Master-Slave replication"
  }
)